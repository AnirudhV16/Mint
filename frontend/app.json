{
  "expo": {
    "name": "AI Food Tracker",
    "slug": "ai-food-tracker",
    "owner": "aavv4",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#3B82F6"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.aifoodtracker",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to take photos of food product labels for ingredient analysis.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to select product images for analysis.",
        "NSPhotoLibraryAddUsageDescription": "This app needs permission to save photos to your library.",
        "NSMicrophoneUsageDescription": "This app does not use the microphone."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive_icon.png",
        "backgroundColor": "#3B82F6"
      },
      "package": "com.yourcompany.aifoodtracker",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.NOTIFICATIONS",
        "android.permission.POST_NOTIFICATIONS",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.RECORD_AUDIO"
      ],
      "useNextNotificationsApi": true
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app needs access to your photos to upload product images for ingredient analysis.",
          "cameraPermission": "The app needs camera access to take photos of food product labels and read ingredients."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification_icon.png",
          "color": "#3B82F6",
          "sounds": [
            "./assets/notification_sound.wav"
          ],
          "androidMode": "default",
          "androidCollapsedTitle": "Food Tracker"
        }
      ]
    ],
    "notification": {
      "icon": "./assets/notification_icon.png",
      "color": "#3B82F6",
      "androidMode": "default",
      "androidCollapsedTitle": "{{unread_count}} new notifications",
      "vapidPublicKey": "BG-0crfYgaukKHIAoMWIcCuo3QzfHiURzFpd_SE2WsGasw-XHZtMvTYMXBDdylLs3TzgnNYnuRRlRodVy2OPFjg"
    },
    "extra": {
      "eas": {
        "projectId": "e5c479f9-c946-4587-a430-3a862c393621"
      }
    }
  }
}
